import random

# Generate a random number between 1 and 100
secret_number = random.randint(1, 100)
attempts = 0

print("ğŸ® Welcome to the Number Guessing Game!")
print("I'm thinking of a number between 1 and 100. Can you guess it?")

while True:
    try:
        # Get user input
        guess = int(input("Enter your guess: "))
        attempts += 1  # Count attempts

        # Check if the guess is correct
        if guess < secret_number:
            print("â¬† Too low! Try again.")
        elif guess > secret_number:
            print("â¬‡ Too high! Try again.")
        else:
            print(f"ğŸ‰ Correct! The number was {secret_number}.")
            print(f"ğŸ‘ You guessed it in {attempts} attempts!")
            break  # Exit loop when correct
    except ValueError:
        print("âš ï¸ Please enter a valid number!")  # Handle invalid input
